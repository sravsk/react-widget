{
  "name": "react-widget",
  "version": "1.0.0",
  "description": "react widget - library as a service",
  "main": "index.js",
  "scripts": {
    "test-jest": "jest client/src/ && exit 0",
    "start": "webpack-serve --config ./webpack.config.js --port 3001",
    "dev-build": "webpack -d --watch"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>client/src/__tests__/setup/jest.config.jsx",
    "testPathIgnorePatterns": ["<rootDir>/client/src/__tests__/setup/"],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|my-project|redux-persist)/)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/client/src/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    }
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "stage-2"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sravsk/react-widget.git"
  },
  "author": "ASTA",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sravsk/react-widget/issues"
  },
  "homepage": "https://github.com/sravsk/react-widget#readme",
  "dependencies": {
    "antd": "^3.6.6",
    "babel-preset-airbnb": "^2.5.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.0",
    "babel-loader": "^7.1.5",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "identity-obj-proxy": "^3.0.0",
    "ignore-styles": "^5.0.1",
    "jest": "^23.4.1",
    "jest-cli": "^23.4.1",
    "react-test-renderer": "^16.4.1",
    "react-transition-group": "^2.4.0",
    "style-loader": "^0.21.0",
    "webpack": "^4.16.0",
    "webpack-cli": "^3.0.8",
    "webpack-serve": "^2.0.2"
  }
}
